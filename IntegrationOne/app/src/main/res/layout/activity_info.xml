<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0099cc"
    android:id="@+id/Frameinfo"
    tools:context="com.braceapps.dusky.activities.InfoActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->


        <TextView android:id="@+id/fullscreen_contenttitle" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:keepScreenOn="true" android:textColor="#FFFFFF"
            android:textStyle="normal" android:textSize="20sp"
            android:text="@string/dummy_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_above="@+id/fulscree_detail_Text"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:text="Some text to be viewed here"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/fulscree_detail_Text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Next"
            android:layout_marginRight="50dp"
            android:textSize="15sp"
            android:layout_marginBottom="20dp"
            android:id="@+id/nextInfo"
            android:layout_gravity="right|bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Back"
            android:textSize="15sp"
            android:id="@+id/backInfo"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="right|bottom"
            android:layout_alignTop="@+id/nextInfo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="T &amp; C"
        android:id="@+id/tandc"
        android:visibility="gone"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/nextInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="84dp" />


</RelativeLayout>


